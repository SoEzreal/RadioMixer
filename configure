#!/bin/sh

show_usage() {
cat <<EOT
Usage: ./configure [OPTION]...

This script creates necessary configuration files to build/install.

Main options:
  --prefix=[path]    Base path for build/install.  Default: /usr/local
  --bindir=[path]    Directory for binaries.  Default: PREFIX/bin
  --qtdir=[path]     Directory where Qt is installed.
  --debug            Enable debug output.
  --help             This help text.

Application options:
  --enable-songdb     Enable the OpenRadio Song databse features. (optional)
  --enable-hwmixer    Enable support for the OpenRadio hardware mixing device.
                      (optional)

Dependency options:
  --disable-alsa                Disable use of alsa
  --with-alsa-inc=[path]        Path to alsa include files
  --with-alsa-lib=[path]        Path to alsa library files
  --disable-jackd               Disable use of jackd
  --with-jackd-inc=[path]       Path to JackD include files
  --with-jackd-lib=[path]       Path to JackD library files
  --disable-mad                 Disable use of mad
  --with-libmad-inc=[path]      Path to libmad include files
  --with-libmad-lib=[path]      Path to libmad library files
  --with-resample-inc=[path]    Path to libsamplarate include files
  --with-resample-lib=[path]    Path to libsamplerate library files
  --disable-vorbis              Disable use of vorbis
  --with-vorbis-inc=[path]      Path to OGG/Vorbid include files
  --with-vorbis-lib=[path]      Path to OGG/Vorbis library files

EOT
}

while [ $# -gt 0 ]; do
	case "$1" in
		--prefix=*)
			PREFIX="${1#--prefix=}"
			shift
			;;

		--bindir=*)
			BINDIR="${1#--bindir=}"
			shift
			;;

		--qtdir=*)
			QTDIR="${1#--qtdir=}"
			shift
			;;

		--enable-songdb)
			QC_ENABLE_SONGDB="Y"
			shift
			;;

		--enable-hwmixer)
			QC_ENABLE_HWMIXER="Y"
			shift
			;;

		--disable-alsa)
			QC_DISABLE_alsa="Y"
			shift
			;;

		--with-alsa-inc=*)
			QC_WITH_ALSA_INC="${1#--with-alsa-inc=}"
			shift
			;;

		--with-alsa-lib=*)
			QC_WITH_ALSA_LIB="${1#--with-alsa-lib=}"
			shift
			;;

		--disable-jackd)
			QC_DISABLE_jackd="Y"
			shift
			;;

		--with-jackd-inc=*)
			QC_WITH_JACKD_INC="${1#--with-jackd-inc=}"
			shift
			;;

		--with-jackd-lib=*)
			QC_WITH_JACKD_LIB="${1#--with-jackd-lib=}"
			shift
			;;

		--disable-mad)
			QC_DISABLE_mad="Y"
			shift
			;;

		--with-libmad-inc=*)
			QC_WITH_LIBMAD_INC="${1#--with-libmad-inc=}"
			shift
			;;

		--with-libmad-lib=*)
			QC_WITH_LIBMAD_LIB="${1#--with-libmad-lib=}"
			shift
			;;

		--with-resample-inc=*)
			QC_WITH_RESAMPLE_INC="${1#--with-resample-inc=}"
			shift
			;;

		--with-resample-lib=*)
			QC_WITH_RESAMPLE_LIB="${1#--with-resample-lib=}"
			shift
			;;

		--disable-vorbis)
			QC_DISABLE_vorbis="Y"
			shift
			;;

		--with-vorbis-inc=*)
			QC_WITH_VORBIS_INC="${1#--with-vorbis-inc=}"
			shift
			;;

		--with-vorbis-lib=*)
			QC_WITH_VORBIS_LIB="${1#--with-vorbis-lib=}"
			shift
			;;

		--debug)
			QC_DEBUG="Y"
			shift
			;;
		--help) show_usage; exit ;;
		*) show_usage; exit ;;
	esac
done

PREFIX=${PREFIX:-/usr/local}
BINDIR=${BINDIR:-$PREFIX/bin}

echo "Configuring radiomixer ..."

if [ "$QC_DEBUG" = "Y" ]; then
echo
echo PREFIX=$PREFIX
echo BINDIR=$BINDIR
echo QTDIR=$QTDIR
echo QC_ENABLE_SONGDB=$QC_ENABLE_SONGDB
echo QC_ENABLE_HWMIXER=$QC_ENABLE_HWMIXER
echo QC_DISABLE_alsa=$QC_DISABLE_alsa
echo QC_WITH_ALSA_INC=$QC_WITH_ALSA_INC
echo QC_WITH_ALSA_LIB=$QC_WITH_ALSA_LIB
echo QC_DISABLE_jackd=$QC_DISABLE_jackd
echo QC_WITH_JACKD_INC=$QC_WITH_JACKD_INC
echo QC_WITH_JACKD_LIB=$QC_WITH_JACKD_LIB
echo QC_DISABLE_mad=$QC_DISABLE_mad
echo QC_WITH_LIBMAD_INC=$QC_WITH_LIBMAD_INC
echo QC_WITH_LIBMAD_LIB=$QC_WITH_LIBMAD_LIB
echo QC_WITH_RESAMPLE_INC=$QC_WITH_RESAMPLE_INC
echo QC_WITH_RESAMPLE_LIB=$QC_WITH_RESAMPLE_LIB
echo QC_DISABLE_vorbis=$QC_DISABLE_vorbis
echo QC_WITH_VORBIS_INC=$QC_WITH_VORBIS_INC
echo QC_WITH_VORBIS_LIB=$QC_WITH_VORBIS_LIB
echo
fi

printf "Verifying Qt 3.x Multithreaded (MT) build environment ... "

if [ -z "$QTDIR" ]; then
	if [ "$QC_DEBUG" = "Y" ]; then
		echo \$QTDIR not set... trying to find Qt manually
	fi
	for p in /usr/lib/qt /usr/share/qt /usr/share/qt3 /usr/local/lib/qt /usr/local/share/qt /usr/lib/qt3 /usr/local/lib/qt3 /usr/X11R6/share/qt /usr/qt/3 ; do
		if [ -d "$p/mkspecs" ]; then
			QTDIR=$p
			break;
		fi;
	done
	if [ -z "$QTDIR" ]; then
		echo fail
		echo
		echo Unable to find Qt 'mkspecs'. Please set QTDIR
		echo manually. Perhaps you need to install Qt 3
		echo development utilities. You may download them either
		echo from the vendor of your operating system or from
		echo www.trolltech.com
		echo
		exit 1;
	fi
fi

if [ ! -x "$QTDIR/bin/qmake" ]; then
	if [ "$QC_DEBUG" = "Y" ]; then
		echo Warning: qmake not in \$QTDIR/bin/qmake
		echo trying to find it in \$PATH
	fi
	qm=`which qmake`
	if [ -x "$qm" ]; then
		if [ "$QC_DEBUG" = "Y" ]; then
			echo qmake found in $qm
		fi
	else
		echo fail
		echo
		echo Sorry, you seem to have a very unusual setup,
		echo or I missdetected \$QTDIR=$QTDIR
		echo
		echo Please set \$QTDIR manually and make sure that
		echo \$QTDIR/bin/qmake exists.
		echo
		exit 1;
	fi
else
	qm=$QTDIR/bin/qmake
fi

gen_files() {
cat >$1/modules.cpp <<EOT
#line 1 "alsa.qcm"
/*
-----BEGIN QCMOD-----
name: alsa
arg: with-alsa-inc=[path],Path to alsa include files
arg: with-alsa-lib=[path],Path to alsa library files
-----END QCMOD-----
*/

//----------------------------------------------------------------------------
// qc_alsa
//----------------------------------------------------------------------------
class qc_alsa : public ConfObj
{
public:
	qc_alsa(Conf *c) : ConfObj(c) {}
	QString name() const { return "alsa"; }
	QString shortname() const { return "alsa"; }
	bool exec()
	{
		QString inc, lib;
		QString s;

		s = conf->getenv("QC_WITH_ALSA_INC");
		if(!s.isEmpty()) {
			if(!conf->checkHeader(s, "sound/asound.h"))
				return false;
			inc = s;
		}
		else {
			if(!conf->findHeader("sound/asound.h", QStringList(), &s))
				return false;
			inc = s;
		}

		s = conf->getenv("QC_WITH_ASOUND_LIB");
		if(!s.isEmpty()) {
			if(!conf->checkLibrary(s, "asound"))
				return false;
			lib = s;
		}
		else {
			if(!conf->findLibrary("asound", &s))
				return false;
			lib = s;
		}

		if(!inc.isEmpty())
			conf->addIncludePath(inc);
		if(!lib.isEmpty())
			conf->addLib(QString("-L") + s);
		conf->addLib("-lasound");
		conf->addDefine("HAVE_ALSA");
		conf->addConfig("alsaSupport");

		return true;
	}
};
#line 1 "jackd.qcm"
/*
-----BEGIN QCMOD-----
name: jackd
arg: with-jackd-inc=[path],Path to JackD include files
arg: with-jackd-lib=[path],Path to JackD library files
-----END QCMOD-----
*/

//----------------------------------------------------------------------------
// qc_jackd
//----------------------------------------------------------------------------
class qc_jackd : public ConfObj
{
public:
	qc_jackd(Conf *c) : ConfObj(c) {}
	QString name() const { return "jackd"; }
	QString shortname() const { return "jackd"; }
	bool exec()
	{
		QString inc, lib;
		QString s;

		s = conf->getenv("QC_WITH_JACKD_INC");
		if(!s.isEmpty()) {
			if(!conf->checkHeader(s, "jack/jack.h"))
				return false;
			inc = s;
		}
		else {
			if(!conf->findHeader("jack/jack.h", QStringList(), &s))
				return false;
			inc = s;
		}

		s = conf->getenv("QC_WITH_ASOUND_LIB");
		if(!s.isEmpty()) {
			if(!conf->checkLibrary(s, "jack"))
				return false;
			lib = s;
		}
		else {
			if(!conf->findLibrary("jack", &s))
				return false;
			lib = s;
		}

		if(!inc.isEmpty())
			conf->addIncludePath(inc);
		if(!lib.isEmpty())
			conf->addLib(QString("-L") + s);
		conf->addLib("-ljack");
		conf->addDefine("HAVE_JACK");
		conf->addConfig("jackSupport");

		return true;
	}
};
#line 1 "mad.qcm"
/*
