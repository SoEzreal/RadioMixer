			if(!conf->checkHeader(s, "mad.h"))
				return false;
			inc = s;
		}
		else {
			if(!conf->findHeader("mad.h", QStringList(), &s))
				return false;
			inc = s;
		}

		s = conf->getenv("QC_WITH_MAD_LIB");
		if(!s.isEmpty()) {
			if(!conf->checkLibrary(s, "mad"))
				return false;
			lib = s;
		}
		else {
			if(!conf->findLibrary("mad", &s))
				return false;
			lib = s;
		}

		if(!inc.isEmpty())
			conf->addIncludePath(inc);
		if(!lib.isEmpty())
			conf->addLib(QString("-L") + s);
		conf->addLib("-lmad");
		conf->addDefine("HAVE_MAD");
		conf->addConfig("madSupport");

		return true;
	}
